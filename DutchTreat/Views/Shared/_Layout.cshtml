<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dutch Treat: @ViewBag.Title</title>
    <link href="~/node_modules/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
<div class="navbar navbar-inverse">
    <header class="container">
        <div class="nav navbar-header">
            <div class="navbar-brand">
                <i class="fa fa-paint-brush fa-spin "></i> to Dutch Treat
            </div>
            <button class="navbar-toggle" data-toggle="collapse" data-target="#menu">&#9776;</button>
        </div>
        <div id="menu" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li>
                    <a asp-controller="App" asp-action="Index">Home</a>
                </li>
                <li>
                    <a asp-controller="App" asp-action="Shop">Shop</a>
                </li>
                <li>
                    <a asp-controller="App" asp-action="Contact">Contact</a>
                </li>
                <li>
                    <a asp-controller="App" asp-action="About">About</a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        <a asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                }
                else
                {
                    <li>
                        <a asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                }

                @*
        <li><a href="/">Home</a></li>               --wersja bez RAZORA, stara szkoła
        <li><a href="/app/contact">Contact</a></li> --wersja bez RAZORA, stara szkoła
        <li><a href="/app/about">About</a></li>     --wersja bez RAZORA, stara szkoła
                    *@
            </ul>
        </div>
    </header>
</div>
<section class="container">
    <h1 class="text-center">@ViewBag.Title</h1>
    @RenderBody()
</section>
<footer class="container">
    <div class="text-center">Copyright 2017 Dutch Treat LLC</div>
</footer>

<environment names="Development">
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <script src="~/js/index.js"></script>
</environment>
<environment names="Staging,Production">
    <script src="//ajax.aspnetcdn.com/ajax/jquery/jquery-3.2.1.min.js"
            asp-fallback-src="~/node_modules/jquery/dist/jquery.min.js"
            asp-fallback-test="window.jQuery"></script>
    <script src="~/node_modules/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <script src="~/dist/dutchtreat.min.js" asp-append-version="true"></script>
</environment>
@RenderSection("scripts", false)
</body>
</html>